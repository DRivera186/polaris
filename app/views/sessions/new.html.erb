<div class="section center3">
</div>
<main>
  <center>
    <img class="responsive-img" style="width: 250px;" src="" />
    <div class="section"></div>
    <h5 class="words1">Sign in</h5>
    <div class="container">
      <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

        <form class="col s12" method="post" action="/sessions/signin">
        	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <div class='row'>
            <div class='col s12'>
            </div>
          </div>

          <div class='row'>
            <div class='input-field col s12'>
              <input class='validate' type='email' name='email' id='email' />
              <label for='email'>Enter your email</label>
            </div>
          </div>

          <div class='row'>
            <div class='input-field col s12'>
              <input class='validate' type='password' name='password' id='password' />
              <label for='password'>Enter your password</label>
            </div>
            <label style='float: right;'>
							<a class='pink-text' href='#!'><b>Forgot Password?</b></a>
						</label>
          <% if flash[:error] %>
            <h5 class="center3"><%= flash[:error] %></h5>
          <% end %>
          <div class="section"></div>
          </div>

          <br />
          <center>
            <div class='row'>
              <button type='submit' name='btn_login' class='col s12 btn btn-large teal lighten-2'>Login</button>
            </div>
          </center>
        </form>
      </div>
    </div>
    <a href="/users/new">Create account</a>
  </center>

  <div class="section"></div>
  <div class="section"></div>
</main>